{
	"$schema": "https://turbo.build/schema.json",
	"globalEnv": ["NODE_ENV", "HYDROGEN_ASSET_BASE_URL"],
	"pipeline": {
		"build": {
			"outputs": ["dist/**", "storybook-static/**"],
			"dependsOn": ["^build"]
		},
		"build:core": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"test": {
			"outputs": ["coverage/**"],
			"dependsOn": []
		},
		"lint": {},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"typecheck": {
			"cache": false,
			"dependsOn": ["^typecheck"]
		},
		"clean": {
			"cache": false
		}
	}
}
