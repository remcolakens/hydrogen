{
	"name": "cbt-hydrogen",
	"author": "Code Internet Applications <info@code.nl>",
	"private": true,
	"scripts": {
		"prepare": "husky install",
		"preinstall": "npx only-allow pnpm",
		"build": "turbo run build",
		"build:core": "turbo run build --filter='./packages/*/*'",
		"dev": "turbo run dev --no-cache --continue",
		"lint:eslint": "turbo run lint",
		"lint:typecheck": "turbo run typecheck",
		"lint": "pnpm lint:typecheck && pnpm lint:eslint",
		"clean": "turbo run clean && rimraf node_modules",
		"format:check": "prettier --check **/* --cache",
		"format:write": "prettier --write **/* --cache",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "turbo run build --filter=storybook^... && changeset publish"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.1",
		"@code-internet-applications/eslint-config-code": "workspace:*",
		"@code-internet-applications/tailwind-config": "workspace:*",
		"@code-internet-applications/tsconfig": "workspace:*",
		"eslint": "^8.41.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"prettier": "^2.8.8",
		"rimraf": "^5.0.1",
		"tsup": "^6.7.0",
		"turbo": "^1.10.0",
		"typescript": "^5.0.4"
	},
	"dependencies": {
		"@types/react": "^18.2.7",
		"@types/react-dom": "^18.2.4",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tailwindcss": "^3.3.2"
	},
	"engines": {
		"node": ">=v18.x"
	},
	"packageManager": "pnpm@8.6.0"
}
