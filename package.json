{
	"name": "cbt-hydrogen",
	"author": "Code Internet Applications <info@code.nl>",
	"private": true,
	"scripts": {
		"prepare": "husky install",
		"commit": "git add . && cz",
		"preinstall": "npx only-allow pnpm",
		"build": "turbo run build",
		"build:core": "turbo run build --filter='./packages/*/*'",
		"dev": "turbo run dev",
		"lint:eslint": "turbo run lint",
		"lint:typecheck": "turbo run typecheck",
		"lint": "npm-run-all build:core lint:*",
		"clean": "turbo run clean && rimraf node_modules",
		"format:check": "prettier --check **/* --cache",
		"format:write": "prettier --write **/* --cache",
		"changeset": "changeset",
		"create:pkg": "plop component",
		"version-packages": "changeset version",
		"release": "turbo run build:core && changeset publish"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.1",
		"@code-internet-applications/eslint-config-code": "workspace:*",
		"@code-internet-applications/prettier-config": "workspace:*",
		"@code-internet-applications/tsconfig": "workspace:*",
		"@commitlint/cli": "^17.6.5",
		"@commitlint/config-conventional": "^17.6.5",
		"@commitlint/cz-commitlint": "^17.5.0",
		"@types/eslint": "^8.40.2",
		"@types/node": "^20.2.5",
		"@types/react": "^18.2.12",
		"@types/react-dom": "^18.2.5",
		"commitizen": "^4.3.0",
		"eslint": "^8.42.0",
		"husky": "^8.0.3",
		"inquirer": "8.2.5",
		"lint-staged": "^13.2.2",
		"npm-run-all": "^4.1.5",
		"plop": "^3.1.2",
		"prettier": "^2.8.8",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"rimraf": "^5.0.1",
		"tailwindcss": "^3.3.2",
		"tsup": "^6.7.0",
		"turbo": "^1.10.3",
		"typescript": "^5.1.3"
	},
	"engines": {
		"node": ">=v18.16.0"
	},
	"packageManager": "pnpm@8.6.0"
}
