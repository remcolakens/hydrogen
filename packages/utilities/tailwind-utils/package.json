{
	"name": "@code-internet-applications/tailwind-utils",
	"version": "0.0.0",
	"description": "A utility library designed to help you with building custom storefronts",
	"author": "Code Internet Applications <info@code.nl>",
	"repository": {
		"type": "git",
		"url": "https://github.com/code-internet-applications/cbt-hydrogen",
		"directory": "packages/utilities/tailwind-utils"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"sideEffects": false,
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "tsup src/index.ts",
		"dev": "tsup src/index.ts --watch",
		"typecheck": "tsc --noEmit",
		"lint": "eslint \"src/**/*.ts*\"",
		"clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
	},
	"tsup": {
		"dts": true,
		"clean": true,
		"target": "es2019",
		"format": [
			"cjs",
			"esm"
		]
	},
	"dependencies": {
		"clsx": "^1.2.1",
		"tailwind-merge": "^1.12.0"
	}
}
