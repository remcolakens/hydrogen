{
	"name": "@code-internet-applications/react",
	"version": "0.1.1",
	"description": "The React component library of the Code Base Theme",
	"author": "Code Internet Applications <info@code.nl>",
	"main": "src/index.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/code-internet-applications/cbt-hydrogen",
		"directory": "packages/components/react"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts --dts",
		"dev": "tsup src/index.ts --watch --dts",
		"clean": "rimraf dist .turbo node_modules",
		"typecheck": "tsc --noEmit",
		"lint": "eslint \"src/**/*.ts*\""
	},
	"tsup": {
		"clean": true,
		"target": "es2019",
		"format": [
			"cjs",
			"esm"
		]
	},
	"dependencies": {
		"@code-internet-applications/accordion": "workspace:*",
		"@code-internet-applications/heading": "workspace:*",
		"@code-internet-applications/text": "workspace:*"
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"tailwindcss": "^3.3.2"
	},
	"engines": {
		"node": ">=v18.16.0"
	}
}
