{
	"name": "@code-internet-applications/icon",
	"version": "0.1.0",
	"description": "A base React component for icons",
	"author": "Code Internet Applications <info@code.nl>",
	"repository": {
		"type": "git",
		"url": "https://github.com/code-internet-applications/cbt-hydrogen",
		"directory": "components/icon"
	},
	"main": "src/index.ts",
	"sideEffects": false,
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts --dts",
		"build:icons": "npm-run-all build:icons-*",
		"build:icons-cbt": "pnpm svgr ./svgr/icon-sets/cbt --out-dir ./src/icon-sets/cbt",
		"dev": "tsup src/index.ts --watch",
		"clean": "rimraf .turbo node_modules dist",
		"clean:icons": "rimraf ./src/icon-sets/cbt"
	},
	"tsup": {
		"clean": true,
		"target": "es2019",
		"format": [
			"cjs",
			"esm"
		]
	},
	"dependencies": {
		"@code-internet-applications/tailwind-utils": "workspace:*"
	},
	"devDependencies": {
		"@svgr/cli": "^8.0.1"
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"tailwindcss": "^3.3.2"
	},
	"engines": {
		"node": ">=v18.16.0"
	}
}
