{
	"name": "@code-internet-applications/accordion",
	"version": "0.1.0",
	"description": "A simple and accessible accordion component",
	"author": "Code Internet Applications <info@code.nl>",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/code-internet-applications/cbt-hydrogen",
		"directory": "packages/components/accordion"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts --dts",
		"dev": "tsup src/index.ts --watch",
		"clean": "rimraf dist .turbo node_modules",
		"typecheck": "tsc --noEmit",
		"lint": "eslint \"src/**/*.ts*\""
	},
	"tsup": {
		"clean": true,
		"target": "es2019",
		"format": [
			"cjs",
			"esm"
		]
	},
	"dependencies": {
		"@code-internet-applications/tailwind-utils": "workspace:*",
		"@radix-ui/react-accordion": "^1.1.2",
		"class-variance-authority": "^0.6.0",
		"lucide-react": "^0.236.0"
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"tailwindcss": "^3.3.2"
	},
	"engines": {
		"node": ">=v18.16.0"
	}
}
